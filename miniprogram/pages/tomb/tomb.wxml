<view class="container">
  <view class="image-container">
    <!-- 显示内置图片 -->
    <block wx:for="{{builtInImages}}" wx:key="index">
      <view class="image-wrapper">
        <image src="{{item}}" mode="aspectFill" class="image" bindtap="onImageTap" data-url="{{item}}" />
      </view>
    </block>
    <!-- 显示用户上传的图片 -->
    <block wx:for="{{uploadedImages}}" wx:key="index">
      <view class="image-wrapper">
        <image src="{{item}}" mode="aspectFill" class="image" bindtap="onImageTap" data-url="{{item}}" />
        <button class="delete-button" bindtap="deleteImage" data-index="{{index}}">×</button>
      </view>
    </block>
    <!-- 上传按钮 -->
    <!-- <view class="upload-button" bindtap="chooseImage">
      <text>上传图片</text>
    </view> -->
  </view>
</view> 