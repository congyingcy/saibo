.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.image-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.image {
  width: 100px;
  height: 100px;
  border-radius: 5px;
}

.image-wrapper {
  position: relative;
}

.delete-button {
  position: absolute;
  top: 0;
  right: 0;
  background-color: red;
  color: white;
  border: none;
  padding: 2px 5px;
  font-size: 12px;
  border-radius: 3px;
}

.upload-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 100px;
  border: 1px dashed #ccc;
  border-radius: 5px;
  background-color: #f9f9f9;
  color: #666;
}

button {
  margin-top: 20px;
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
  width: 100%;
} 