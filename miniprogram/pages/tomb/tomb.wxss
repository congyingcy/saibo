.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

.image-container {
  position: relative;
}

.tomb-image {
  width: 100%;
  height: 150px;
  border-radius: 5px;
  object-fit: cover;
}

.delete-button {
  position: absolute;
  top: 5px;
  right: 5px;
  width: 20px;
  height: 20px;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 20px;
  font-size: 16px;
  cursor: pointer;
}

button {
  margin-top: 20px;
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
  width: 100%;
} 