.container {
  position: relative;
  padding: 20px;
  min-height: 100vh;
  overflow: hidden;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  object-fit: cover;
}

.life-time {
  margin-bottom: 40px;
  text-align: center;
}

.life-time text {
  display: block;
  font-size: 20px;
  color: #333;
  margin: 10px 0;
}

.buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 20px;
}

.buttons button {
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
} 